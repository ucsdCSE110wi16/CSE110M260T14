<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cse110mb260t14.ffs.ConfirmItemListing"
    android:background="#4A5DB4">


    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Confirmation Page"
        android:id="@+id/LargeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:typeface="normal"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_title_confirm"
        android:text="Title"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/LargeText"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp" />

    <!-- PRICE -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/price_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_price_confirm"
        android:text="price"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $"
        android:id="@+id/price_text_view"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/item_title_confirm"
        android:layout_toLeftOf="@+id/item_price_confirm"
        android:layout_toStartOf="@+id/item_price_confirm"
        android:textStyle="bold"
        android:textSize="15dp" />


    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Description: "
        android:id="@+id/description_text_view"
        android:layout_below="@+id/item_title_confirm"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_description_confirm"
        android:text="description"
        android:layout_below="@+id/description_text_view"
        android:textColor="#FFFFFF" />




    <!-- categories -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories: "
        android:id="@+id/categories_text_view"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/item_description_confirm"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_categories_confirm"
        android:text="categories"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/item_description_confirm"
        android:textColor="#FFFFFF" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/zipcode_textview"
        android:layout_below="@id/item_categories_confirm"
        android:text="Zipcode:"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/zipcode_textview"
        android:layout_alignBaseline="@id/zipcode_textview"
        android:id="@+id/zipcode_confirm"/>
    <!-- BUTTONS -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit_button"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:textColor="#FFFFFF"
        android:background="#2962FF"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/confirm_button"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/edit_button"
        android:layout_toEndOf="@+id/edit_button"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:background="#2962FF"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/photo_confirm"
        android:layout_above="@+id/edit_button"
        android:layout_alignLeft="@+id/LargeText"
        android:layout_alignStart="@+id/LargeText" />


</RelativeLayout>
