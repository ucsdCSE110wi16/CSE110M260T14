<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cse110mb260t14.ffs.ConfirmItemListing">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm item listing"
        android:id="@+id/confirmation_page"
        android:textStyle="bold|italic"
        android:textSize="30dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_title_confirm"
        android:text="Title"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/confirmation_page" />

    <!-- PRICE -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/item_title_confirm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_price_confirm"
        android:text="price"
        android:layout_toLeftOf="@id/textView3"
        android:layout_alignBaseline="@id/item_title_confirm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:id="@+id/price_text_view"
        android:layout_toLeftOf="@id/item_price_confirm"
        android:layout_alignBaseline="@id/item_title_confirm"/>


    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Description: "
        android:id="@+id/description_text_view"
        android:layout_below="@+id/item_title_confirm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_description_confirm"
        android:text="description"
        android:layout_below="@+id/description_text_view" />


    <!-- Location -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:id="@+id/location_text_view"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/item_description_confirm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_location_confirm"
        android:text="Location"
        android:layout_below="@+id/location_text_view"/>



    <!-- categories -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories: "
        android:id="@+id/categories_text_view"
        android:layout_alignBaseline="@+id/item_categories_confirm"
        android:layout_alignBottom="@+id/item_categories_confirm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_categories_confirm"
        android:text="categories"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/item_location_confirm"
        android:layout_toLeftOf="@+id/confirm_button"
        android:layout_toStartOf="@+id/confirm_button" />


    <!-- BUTTONS -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit_button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/item_description_confirm"
        android:layout_toEndOf="@+id/item_description_confirm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/confirm_button"
        android:layout_toRightOf="@id/edit_button"
        android:layout_alignBaseline="@id/edit_button"/>



</RelativeLayout>

